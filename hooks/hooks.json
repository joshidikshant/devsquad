{
  "description": "DevSquad session management and delegation enforcement",
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session-start.sh",
        "timeout": 15
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre-compact.sh",
        "timeout": 15
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|WebSearch",
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre-tool-use.sh",
        "timeout": 15
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/stop.sh",
        "timeout": 15
      }
    ]
  }
}
